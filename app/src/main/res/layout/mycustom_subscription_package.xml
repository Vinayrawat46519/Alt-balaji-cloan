
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="15dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="40dp">
        <RelativeLayout
            android:layout_width="match_parent"

            android:id="@+id/rl_package_background"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/basic_midiel_ll"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:id="@+id/tv_package_name"
                    android:text="Free"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/rb_package_button"
                    android:buttonTint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:text="subscice"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/basic_free_ll"
                android:orientation="horizontal"
                android:layout_below="@id/basic_midiel_ll">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:textSize="40sp"
                    android:text="@string/prise"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:id="@+id/tv_package_price"
                    android:text=" 0"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_package_duration"
                    android:textSize="25sp"
                    android:text=" / lifetime"
                    android:gravity="center"
                    android:textColor="@color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/basic_free_ll"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Include add and Promotion"
                    android:id="@+id/tv_package_desc"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>


        </RelativeLayout>







    </androidx.cardview.widget.CardView>

</LinearLayout>